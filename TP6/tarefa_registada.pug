extends layout
block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3(align='center') Tarefa Registada
            .w3-container
                table.w3-table-all
                    tr
                        th Data de Registo
                        td= tarefa.dataRegisto
                    tr
                        th Data Limite
                        td= tarefa.dataLimite
                    tr
                        th Descrição
                        td= tarefa.descricao
                    tr
                        th Tipo de Tarefa
                        td= tarefa.tipo
            footer.w3-container.w3-teal
                address Gerado por ListaTarefasApp
                a.w3-indigo(href='/') Voltar à página principal