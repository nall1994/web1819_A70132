extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-indigo
                h3(align='center') Catálogo de Ficheiros Armazenados
            br
            .w3-container
                table.w3-table-all
                    tr
                        th Nome do ficheiro
                        th Descrição
                        th Data de Submissão
                    each ficheiro in ficheiros     
                        tr
                            td= ficheiro.nome
                            td= ficheiro.descricao
                            td= ficheiro.dataRegisto
            br
            footer.w3-container.w3-indigo
                address Gerado por FormApp
                a(href='/') Voltar à página principal